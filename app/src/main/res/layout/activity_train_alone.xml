<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ania.fitapplication.TrainAlone">

    <ImageView
        android:src="@drawable/pobrane"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/calories_text"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:hint="How many calories do you want to burn? "
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/time_text"
            style="@style/ButtonStyle"
            android:hint="How much time do you have? [min]"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textStyle="bold" />

        <Button
        style="@style/ButtonStyle"
        android:background="@color/ButtonColor"
        android:layout_margin="20dp"
        android:text="Ok"
        android:onClick="Ok"/>

    <Button
        style="@style/ButtonStyle"
        android:background="@color/ButtonColor"
        android:text="@string/back"
        android:onClick="Back"/>

        <Button
            android:id="@+id/showResults"
            style="@style/ButtonStyle"
            android:background="@color/ButtonColor"
            android:text="Show Exercises"
            android:onClick="showExercises"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout >
